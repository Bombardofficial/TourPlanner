<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="at.fhtw.swen2.tutorial.presentation.view.NewTourLogController"
            prefHeight="400.0" prefWidth="600.0">


    <children>
        <Label text="%tab.demo.title">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Separator prefWidth="200.0" />
        <GridPane hgap="10" vgap="10">

            <Label text="Comment:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextArea fx:id="commentTextArea" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Difficulty:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <ChoiceBox fx:id="tourDifficultyChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="difficult" />
                        <String fx:value="moderate" />
                        <String fx:value="easy" />
                    </FXCollections>
                </items>
            </ChoiceBox>

            <Label text="Total Time:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="totalTourTimeField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Rating:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="ratingField" GridPane.columnIndex="1" GridPane.rowIndex="4">
            </TextField>

        </GridPane>
        <Button fx:id="submitButton" onAction="#submitButtonAction" text="Insert TourLog"/>
        <Separator prefWidth="200.0" />
        <Text fx:id="feedbackText" />
    </children>
    <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
    </padding>

</AnchorPane>
