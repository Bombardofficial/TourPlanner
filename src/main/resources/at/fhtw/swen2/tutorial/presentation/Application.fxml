<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="layout" prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.fhtw.swen2.tutorial.presentation.ApplicationController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
         <menus>
            <Menu mnemonicParsing="false" text="%menu.file.title">
               <items>
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="miPreferences" mnemonicParsing="false" text="%menu.file.about" />
                  <MenuItem fx:id="miQuit" mnemonicParsing="false" onAction="#onFileClose" text="%menu.file.quit" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="%menu.options.title">
               <items>
                  <MenuItem fx:id="miAbout" mnemonicParsing="false" onAction="#onHelpAbout" text="%menu.options.info" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="%menu.edit.title">
               <items>
                  <MenuItem fx:id="miAbout1" mnemonicParsing="false" onAction="#onHelpAbout" text="%menu.edit.edit_log" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
   </top>
   <center>
       <AnchorPane>
            <children>
                        <fx:include source="view/Search.fxml" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                        <SplitPane dividerPositions="0.265" AnchorPane.topAnchor="40.0">
                            <items>
                                <AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                                    <children>
                                        <VBox layoutX="11.0" layoutY="145.0" prefHeight="200.0" prefWidth="230.0" />
                                        <fx:include source="view/NewTour.fxml" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                                    </children>
                                </AnchorPane>
                                <TabPane prefHeight="380.0" prefWidth="1280.0" tabClosingPolicy="UNAVAILABLE">
                                    <tabs>
                                        <Tab text="%tab.firsttab.title">
                                            <content>
                                                <AnchorPane>
                                                    <children>
                                                        <fx:include source="view/TourList.fxml" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="40.0" />
                                                        <VBox layoutX="26.0" layoutY="59.0" prefHeight="200.0" prefWidth="531.0" />
                                                    </children>
                                                </AnchorPane>
                                            </content>
                                        </Tab>
                                        <Tab text="%tab.secondtab.title">
                                            <content>
                                                <fx:include fx:id="logViewPane" source="view/LogViewPane.fxml" />
                                            </content>
                                        </Tab>


                                    </tabs>

                                </TabPane>

                            </items>
                        </SplitPane>

            </children>
       </AnchorPane>

   </center>
</BorderPane>
