<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ChoiceBox?>
<?import at.fhtw.swen2.tutorial.persistence.entities.TransportType?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.TextArea?>
<?import java.lang.String?>

<?import javafx.scene.control.Dialog?>
<?import javafx.scene.control.DialogPane?>
<Dialog fx:id="dialog"
        fx:controller="at.fhtw.swen2.tutorial.presentation.view.ModifyTourController"
        xmlns:fx="http://javafx.com/fxml">
    <dialogPane>
        <DialogPane prefWidth="600.0" prefHeight="300.0">
            <content>
                <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="300.0" prefWidth="200.0"
                      spacing="8.0" xmlns="http://javafx.com/javafx/17">
                    <children>
                        <Label text="Tour Modification">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Separator prefWidth="200.0" />
                        <GridPane hgap="10" vgap="10">
                            <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <TextField fx:id="nameTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                            <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <TextArea fx:id="descriptionTextArea" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="(optional)"/>

                            <Label text="From:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <TextField fx:id="fromTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                            <Label text="To:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                            <TextField fx:id="toTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                            <Label text="Transport Type:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                            <ChoiceBox fx:id="transportTypeChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="4">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="CAR" />
                                        <String fx:value="TRAIN" />
                                        <String fx:value="PLANE" />
                                        <String fx:value="BIKE" />
                                        <String fx:value="WALK" />
                                    </FXCollections>
                                </items>
                            </ChoiceBox>

                            <Label text="Distance:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                            <TextField fx:id="distanceTextField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                            <Label text="Estimated Time:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                            <TextField fx:id="estimatedTimeTextField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                        </GridPane>
                        <Button fx:id="modifyButton" onAction="#modifyButtonAction" text="Modify Tour"/>

                        <Separator prefWidth="200.0" />
                        <Text fx:id="feedbackText" />
                    </children>
                    <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                    </padding>
                </VBox>
            </content>
        </DialogPane>
    </dialogPane>
</Dialog>