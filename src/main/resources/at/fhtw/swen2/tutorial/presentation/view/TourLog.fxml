<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ChoiceBox?>
<?import at.fhtw.swen2.tutorial.persistence.entities.TransportType?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.TextArea?>
<?import java.lang.String?>

<?import javafx.scene.control.Dialog?>
<?import javafx.scene.control.DialogPane?>
<Dialog fx:id="dialog2"
        fx:controller="at.fhtw.swen2.tutorial.presentation.view.NewTourLogController"
        xmlns:fx="http://javafx.com/fxml">
    <dialogPane>
        <DialogPane prefWidth="600.0" prefHeight="300.0">
            <content>
                <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="300.0" prefWidth="200.0"
                      spacing="8.0" xmlns="http://javafx.com/javafx/17">
                    <children>
                        <Label text="Creating TourLog">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Separator prefWidth="200.0" />
                        <GridPane hgap="10" vgap="10">
                            <Label text="Comment:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <TextArea fx:id="commentTextArea" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                            <Label text="Difficulty:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <ChoiceBox fx:id="tourDifficultyChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="difficult" />
                                        <String fx:value="moderate" />
                                        <String fx:value="easy" />
                                    </FXCollections>
                                </items>
                            </ChoiceBox>

                            <Label text="Total Time:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <TextField fx:id="totalTourTimeField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                            <Label text="Rating:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                            <TextField fx:id="ratingField" GridPane.columnIndex="1" GridPane.rowIndex="4">
                            </TextField>

                        </GridPane>
                        <Button fx:id="submitButton" onAction="#submitButtonAction" text="Insert TourLog"/>

                        <Separator prefWidth="200.0" />
                        <Text fx:id="feedbackText" />
                    </children>
                    <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                    </padding>
                </VBox>
            </content>
        </DialogPane>
    </dialogPane>
</Dialog>